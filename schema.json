{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",

  "properties": {
    "name": {
      "type": "string"
    },
    "ids": {
      "type": "object",
      "anyOf": [
        {
          "properties": {
            "syscall_id": {}
          },
          "required": ["syscall_id"]
        },
        {
          "properties": {
            "prx_id": {}
          },
          "required": ["prx_id"]
        }
      ]
    },
    "returns": {
      "type": "string"
    },
    "params": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "type",
          "description"
        ]
      }
    },
    "brief": {
      "type": "string"
    },
    "class": {
      "type": "string"
    },
    "firmwares": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "CEX",
          "DEX",
          "DECR"
        ]
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "flags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 0,
      "uniqueItems": true
    }
  },
  "required": [
    "name",
    "ids",
    "returns",
    "params",
    "brief",
    "class",
    "firmwares",
    "flags"
  ]
}